@model IEnumerable<WebShop.ViewModels.DTO.OrderDTO>

@{
    ViewData["Title"] = "Order Översikt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Order Översikt</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Stad</th>
                <th>Postnummer</th>
                <th>Adress</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.FirstName @order.LastName</td>
                    <td>@order.City</td>
                    <td>@order.ZipCode</td>
                    <td>@order.Adress</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Inga beställningar hittades.</p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>