@model IEnumerable<WebShop.ViewModels.DTO.OrderDTO>

@{
    ViewData["Title"] = "Order Översikt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order Översikt</h1>

<form method="get">
    <div class="form-group">
        <input type="text" name="search" class="form-control" placeholder="Search" value="@ViewBag.Search" />
    </div>
    <button type="submit" class="btn btn-primary">Sök</button>
</form>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Stad</th>
                <th>Postnummer</th>
                <th>Adress</th>
                <th>Total Summa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.FirstName @order.LastName</td>
                    <td>@order.City</td>
                    <td>@order.ZipCode</td>
                    <td>@order.Adress</td>
                    <td>@order.TotalOrderAmount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Inga beställningar hittades.</p>
}

<div>
    <a asp-controller="AdminPage" asp-action="Dashboard">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}