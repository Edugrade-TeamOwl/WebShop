@model IList<WebShop.Models.Product>

@{
    ViewData["Title"] = "Kundvagn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Checkout", "ShoppingCart", FormMethod.Post))
{
    <h1>Kundvagn</h1>


    <table class="table">
        <thead>
            <tr>
                <th>
                    Product
                </th>

                <th>
                    Pris
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @{
                decimal totalPrice = 0;
            }
            @for (var i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        @Model[i].ProductName
                        @Html.HiddenFor(m => m[i].ProductName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => @Model[i].ProductPrice)
                        @Html.HiddenFor(m => m[i].ProductPrice)
                    </td>
                    <td>
                        @*@Html.DisplayFor(m => m[i].ProductId)*@
                        @Html.HiddenFor(m => m[i].ProductId)
                    </td>
                </tr>

                totalPrice += @Model[i].ProductPrice;
            }
        </tbody>

    </table>

    <h4>Totalt: @totalPrice Kr</h4>
    <input class="btn btn-primary" type="submit" value="Betala" />
}